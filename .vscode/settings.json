{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[solidity]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.editorconfig": true,
    "**/.git": true,
    "**/.pretterrc": true,
    "**/*.lock": false,
    "**/artifacts": true,
    "**/cache": true,
    "**/node_modules": false
  }
}